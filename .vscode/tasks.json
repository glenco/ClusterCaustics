{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake -- configure debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DENABLE_CERF=ON",
                "-DENABLE_EIGEN=ON",
                "-DENABLE_GSL=ON",
                "..",
                "-G Ninja"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Configures the project in debug mode."
        },
        {
            "label": "cmake -- configure release",
            "type": "shell",
